root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[{node_modules,vendor}/**]
; use default in this files
indent_style = unset
indent_size = unset
trim_trailing_whitespace = false
insert_final_newline = false

[*.{coffee,js,html,vue}]
indent_size = 2

[Makefile]
indent_style = tab
